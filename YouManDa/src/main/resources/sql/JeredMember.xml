<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

	<!-- 자신의 개인정보를 조회 // resultType => 결과, parameterType => 입력-->
	<select id="selectMyinfo" resultType="map" parameterType="string">
		SELECT 
		 id, lang, email, school, address, phonenum, passnum, sex, name, birthday, nick
		 FROM `MEMBER`
		 WHERE id = #{value}
	</select>
	
	
	<!-- 회원정보 수정 -->
<!-- 	<update id="updateMyinfo" parameterType="">
		UPDATE `MEMBER` SET
		
	</update>
	 -->
	

	<!-- 회원 탈퇴 -->
	<delete id="deleteMyinfo">
		DELETE FROM `MEMBER`
		 WHERE id = #{value}		
	</delete>

</mapper>